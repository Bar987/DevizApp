<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ui.main.main_fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/base_text_view"
            android:layout_width="190dp"
            android:layout_height="42dp"
            android:layout_margin="20dp"
            android:text="@string/base_currency"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/base_selected"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:text="@string/selected_currency"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/currency_flag"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="20dp" />

        <ImageButton
            android:id="@+id/currency_selector_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:contentDescription="select_currency"
            android:src="@drawable/baseline_create_black_24" />
    </LinearLayout>

    <include
        layout="@layout/main_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="633dp" />

</LinearLayout>